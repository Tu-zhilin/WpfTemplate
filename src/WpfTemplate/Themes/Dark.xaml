<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Style/Merge.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!--窗体背景-->
    <SolidColorBrush x:Key="WindowBackground" Color="#404040"/>
    <!--标题栏背景-->
    <SolidColorBrush x:Key="TitleBarBackground" Color="#4D4D4D"/>
    <!--字体颜色-->
    <SolidColorBrush x:Key="Foreground" Color="White"/>
    <!--菜单栏背景-->
    <SolidColorBrush x:Key="MenuBackground" Color="#4D4D4D"/>
    <!--鼠标划过字体颜色-->
    <SolidColorBrush x:Key="IsMouseOverForeground" Color="Black"/>
    <!--阴影的颜色-->
    <Color x:Key="DropShadowEffectColor" R="255" G="255" B="255"/>

</ResourceDictionary>